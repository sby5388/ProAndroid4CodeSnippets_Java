<?xml version="1.0" encoding="utf-8"?>

<!-- Listing 3-8: Adding Fragments to Activities using XML layouts -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/my_list_fragment"
        android:name="com.professionalandroid.apps.MyListFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/details_fragment"
        android:name="com.professionalandroid.apps.DetailFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3" />
</LinearLayout>